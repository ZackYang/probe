{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "preserve",
    "noEmit": false,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node"
  },
  "include": [
    "src/main.ts",
    "src/preload.ts",
    "src/id3-service.ts"
  ],
  "exclude": [
    "src/renderer/**/*"
  ]
}
